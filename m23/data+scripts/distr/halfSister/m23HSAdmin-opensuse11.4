#####
# name pkgSearch
# description Searches for available packages matching all keywords.
# parameter Search terms seperated spaces.
#####
pkgSearch()
{
	echo $@ | perl -e '
	$arg=<>;
	open(ZYPPER, "zypper -n search $arg |");
	while(<ZYPPER>){
		if( $start ){
				@a = split /[\s]+\|[\s]+/, $_;
				if( $a[3] =~ "^package" ){
					$size=0;
					$size=`rpm -q $a[1] --qf "%{SIZE}"` if $a[0] eq "i";
					print "$a[1]###$a[2]###$size\n";
				}
		}elsif( $_ =~ /([-]+\+)+[-]+/ ){
				$start = 1;
		}
	}'
}



